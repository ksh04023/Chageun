<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BAEBEBEB"
    tools:context=".inputDiaryActivity">
    <LinearLayout
        android:id="@+id/addFoodBox"
        android:orientation="vertical"
        android:background="@drawable/radius"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="혈당 정보 입력하기"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center_horizontal"
            android:background="#30CDB2"
            android:layout_width="250dp"
            android:layout_height="3dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="언제 측정하셨나요?"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@drawable/radius"
                android:paddingHorizontal="10dp"
                android:backgroundTint="#30CDB2"
                android:gravity="center"
                android:layout_margin="2dp"
                android:shadowColor="@color/common_google_signin_btn_text_dark_disabled"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioGroup
                    android:id="@+id/mealGroup"
                    android:layout_margin="0dp"
                    android:paddingVertical="15dp"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="아침"
                        android:id="@+id/radio_breakfast"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>
                    <RadioButton
                        android:text="점심"
                        android:id="@+id/radio_lunch"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>
                    <RadioButton
                        android:text="저녁"
                        android:id="@+id/radio_dinner"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        />
                    <RadioButton
                        android:text="취침 전"
                        android:id="@+id/radio_sleeping"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        />
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/whenGroup"
                    android:paddingVertical="15dp"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" android:layout_gravity="top"
                    android:layout_marginTop="30dp" android:visibility="invisible">
                    <RadioButton
                        android:text="식전"
                        android:id="@+id/before_eating"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>
                    <RadioButton
                        android:text="식후"
                        android:id="@+id/after_eating"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>

                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:padding="10dp"
        android:layout_margin="10dp">

        <EditText
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text=""
            android:ems="10"
            android:id="@+id/bloodSugar"/>
        <TextView
            android:id="@+id/textView15"
            android:text="mg/dL"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:background="@drawable/radius"
        android:backgroundTint="#FDD866"
        android:textStyle="bold"
        android:text="추가하기"
        android:paddingHorizontal="10dp"
        android:layout_width="390dp"
        android:layout_height="wrap_content" android:id="@+id/inputSugar"/>
</LinearLayout>