<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_gravity="center"
    android:background="#BAEBEBEB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmActivity">
    <ImageView
        android:layout_width="300dp"
        android:src="@drawable/ckck"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="370dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/radius"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:text="알람명"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/editText9"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:text="요일"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"/>
        <CheckBox
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp" android:id="@+id/button7"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#F12121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"/>
        <CheckBox
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp" android:id="@+id/button8"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="월"/>
        <CheckBox
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp" android:id="@+id/button9"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="화"/>
        <CheckBox
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp" android:id="@+id/button10"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="수"/>
        <CheckBox
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp" android:id="@+id/button11"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="목"/>
        <CheckBox
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp" android:id="@+id/button12"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="금"/>
        <CheckBox
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp" android:id="@+id/button13"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#3C4FBD"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="토"/>
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:text="시간"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TimePicker
                android:layout_marginLeft="20dp"
                android:id="@+id/timePicker"
                android:timePickerMode="spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_marginTop="15dp"
        android:background="@drawable/radius"
        android:backgroundTint="#FDD866"
        android:text="알람 등록"
        android:layout_width="370dp"
        android:layout_height="wrap_content" android:id="@+id/button14"/>
</LinearLayout>