<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BAEBEBEB"
    tools:context=".InputSugarDialog">
    <LinearLayout
        android:id="@+id/addFoodBox"
        android:orientation="vertical"
        android:background="@drawable/radius"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="혈압 정보 입력하기"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center_horizontal"
            android:background="#30CDB2"
            android:layout_width="250dp"
            android:layout_height="3dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수축기&amp;이완기"
                android:paddingHorizontal="10dp"
                android:backgroundTint="#30CDB2"
                android:background="@drawable/radius"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="2dp"
                android:shadowColor="@color/common_google_signin_btn_text_dark_disabled"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/sbp"
                    android:text="수축기 혈압 : "
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/sbp_num"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:ems="10"
                    />
                <TextView
                    android:text="mmHg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/dbp"
                    android:text="이완기 혈압 : "
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/dbp_num"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:ems="10"
                    />
                <TextView
                    android:text="mmHg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:background="@drawable/radius"
        android:textStyle="bold"
        android:backgroundTint="#FDD866"
        android:text="추가하기"
        android:paddingHorizontal="10dp"
        android:layout_width="390dp"
        android:layout_height="wrap_content" android:id="@+id/inputPressure"/>
</LinearLayout>