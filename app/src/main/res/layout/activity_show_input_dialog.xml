<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DCDCDC"
        android:orientation="vertical"
        tools:context=".ShowInputDialogActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginLeft="179dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ckck"/>


<LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <Button android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="혈당 수치 입력"
            android:id="@+id/sugarB"
            android:background="@drawable/textview_white_left_pressed"
            android:layout_weight="1" android:focusableInTouchMode="true"/>
    <Button android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="혈압 수치 입력"
            android:background="@drawable/textview_white_right"
            android:id="@+id/pressureB"
            android:focusableInTouchMode="true"
            android:layout_weight="1"/>
</LinearLayout>


    </LinearLayout>

    <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>